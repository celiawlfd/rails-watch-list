<div class="container">
  <h1 class="my-4 text-center">Your lists</h1>

  <div class="row">
    <div class="col-12 col-lg-8">
      <% @lists.each do |list| %>
        <div class="card card-body text-center mb-3 shadow-sm" style="max-width: 700px; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
          <h5 class="card-title"><%= list.name %></h5>
          <%= link_to "Open list", list_path(list), class: "btn btn-outline-dark" %>
        </div>
      <% end %>
    </div>

    <div class="col-12 col-lg-4">
      <div class = "card card-body shadow-sm">
        <h3 class="text-center">Create a new list</h3>
        <%= simple_form_for(@list) do |f|%>
          <%= f.input :name, placeholder: "Create a new list" %>
          <%= f.input :photo, as: :file %>
          <%= f.button :submit, "Create", class: "btn btn-outline-dark" %>
        <% end %>
      </div>
    </div>
  </div>

</div>
