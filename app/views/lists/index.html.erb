<div class="container">
  <h1 class="my-4 text-center">Your lists</h1>

  <div class="row">
    <div class="col-12 col-lg-9">
      <div class="d-flex flex-wrap justify-content-around me-4">
        <% @lists.each do |list| %>
          <div class= "mb-3 list-card" data-controller="listcard" data-action="mouseover->listcard#arrow mouseout->listcard#noarrow">
            <%= link_to list_path(list), class: "button" do %>
              <div class="list-image" style="width: 250px; height: 220px; background-image: linear-gradient(rgba(0,0,0,0.05), rgba(0,0,0,0.05)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
              </div>
              <div class = "d-flex justify-content-center align-items-center">
                <h5 class="my-3 text-center"><%= list.name %></h5>
                <div data-listcard-target = "title"></div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-12 col-lg-3">
      <div class = "card card-body shadow-sm border border-dark border-2 rounded">
        <h3 class="text-center">Create a new list</h3>
        <%= simple_form_for(@list) do |f|%>
          <%= f.input :name, placeholder: "Create a new list" %>
          <%= f.input :photo, as: :file %>
          <div class="d-flex justify-content-center">
            <%= f.button :submit, "Create your list", class: "btn btn-outline-dark rounded-pill" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
